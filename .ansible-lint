---
# ansible-lint configuration to suppress some strict rules for CI
# and to map file kinds so schema validation picks the right schema.
skip_list:
  - var-naming
  - yaml
  - fqcn
  - args
  - no-changed-when
  - ignore-errors
  - risky-file-permissions
  - package-latest
  - new-line-at-end-of-file
  - trailing-spaces
  - truthy

# Help ansible-lint pick the correct schema for non-standard filenames
kinds:
  - name: playbook
    patterns: "ansible/playbooks/*.yml"
  - name: playbook_yaml
    patterns: "ansible/playbooks/*.yaml"
